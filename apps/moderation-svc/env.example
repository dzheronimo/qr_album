# Настройки приложения
APP_NAME=Moderation Service
DEBUG=false

# Настройки базы данных
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/moderation_db

# Настройки CORS
ALLOWED_ORIGINS=["*"]

# Настройки JWT
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Настройки AI модерации
AI_ENABLED=true
AI_TIMEOUT=30
AI_RETRY_ATTEMPTS=3

# Настройки автоматической модерации
AUTO_MODERATION_ENABLED=true
AUTO_APPROVE_THRESHOLD=0.9
AUTO_REJECT_THRESHOLD=0.1

# Настройки уведомлений
NOTIFY_ON_FLAG=true
NOTIFY_ON_REJECT=true

# Настройки журнала
LOG_RETENTION_DAYS=90
LOG_CLEANUP_INTERVAL_HOURS=24

# Настройки правил
MAX_RULES_PER_CONTENT_TYPE=100
RULE_EVALUATION_TIMEOUT=5
