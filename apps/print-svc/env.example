# Настройки приложения
APP_NAME=Print Service
DEBUG=false

# Настройки базы данных
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/print_db

# Настройки CORS
ALLOWED_ORIGINS=["*"]

# Настройки JWT
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Настройки WeasyPrint
WEASYPRINT_ENABLED=true
WEASYPRINT_TIMEOUT=30
WEASYPRINT_RETRY_ATTEMPTS=3

# Настройки очереди печати
QUEUE_ENABLED=true
MAX_CONCURRENT_JOBS=5
QUEUE_CLEANUP_INTERVAL=3600

# Настройки файлов
OUTPUT_DIRECTORY=/tmp/print_output
FILE_RETENTION_DAYS=7
MAX_FILE_SIZE_MB=100

# Настройки качества
DEFAULT_QUALITY=300
SUPPORTED_FORMATS=["pdf", "png", "jpg", "svg"]
SUPPORTED_PAGE_SIZES=["A4", "A5", "Letter", "Legal"]

# Настройки шаблонов
MAX_TEMPLATES_PER_TYPE=100
TEMPLATE_VALIDATION_ENABLED=true

# Настройки макетов
MAX_LAYOUTS_PER_TYPE=50
LAYOUT_VALIDATION_ENABLED=true
