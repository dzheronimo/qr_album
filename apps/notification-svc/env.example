# Настройки приложения
APP_NAME=Notification Service
DEBUG=false

# Настройки базы данных
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/notification_db

# Настройки CORS
ALLOWED_ORIGINS=["*"]

# Настройки JWT
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Настройки уведомлений
MAX_NOTIFICATION_ATTEMPTS=3
NOTIFICATION_RETRY_DELAY=300

# Настройки очереди
QUEUE_BATCH_SIZE=10
QUEUE_CLEANUP_DAYS=7

# Настройки email
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_TLS=true

# Настройки push уведомлений
FIREBASE_SERVER_KEY=

# Настройки SMS
SMS_PROVIDER=
SMS_API_KEY=
