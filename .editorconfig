root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.{yml,yaml}]
indent_size = 2

[*.{md,markdown}]
indent_size = 2

[Makefile]
indent_style = tab

[*.{json,js,ts,tsx,jsx}]
indent_size = 2

[*.{html,css,scss}]
indent_size = 2