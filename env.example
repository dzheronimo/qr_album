# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15

# Public Base URL
PUBLIC_BASE_URL=http://localhost:8080

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# RabbitMQ Configuration
RABBITMQ_HOST=rabbit
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/

# PostgreSQL Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Database Names
DB_AUTH=authdb
DB_PROFILE=profiledb
DB_ALBUM=albumdb
DB_MEDIA=mediadb
DB_QR=qrdb
DB_ANALYTICS=analyticsdb
DB_BILLING=billingdb

# MinIO Configuration
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=qr-albums-media
MINIO_SECURE=false

# SMTP Configuration (for notifications)
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_USE_TLS=false
SMTP_FROM_EMAIL=noreply@qr-albums.com

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Service URLs (for inter-service communication)
API_GATEWAY_URL=http://api-gateway:8000
AUTH_SVC_URL=http://auth-svc:8000
USER_PROFILE_SVC_URL=http://user-profile-svc:8000
ALBUM_SVC_URL=http://album-svc:8000
MEDIA_SVC_URL=http://media-svc:8000
QR_SVC_URL=http://qr-svc:8000
SCAN_GATEWAY_URL=http://scan-gateway:8000
PRINT_SVC_URL=http://print-svc:8000
ANALYTICS_SVC_URL=http://analytics-svc:8000
BILLING_SVC_URL=http://billing-svc:8000
NOTIFICATION_SVC_URL=http://notification-svc:8000
MODERATION_SVC_URL=http://moderation-svc:8000
